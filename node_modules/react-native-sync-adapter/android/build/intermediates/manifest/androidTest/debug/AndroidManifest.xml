<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fnp.reactnativesyncadapter.test" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.fnp.reactnativesyncadapter.test"
        android:targetPackage="com.fnp.reactnativesyncadapter.test" />
    <!-- Sync adapter -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application>
        <uses-library android:name="android.test.runner" />
        <!-- SyncAdapter dummy provider -->
        <provider
            android:name="com.fnp.reactnativesyncadapter.DummyContentProvider"
            android:authorities="@string/rnsb_content_authority"
            android:exported="false"
            android:syncable="true" /> <!-- SyncAdapter's dummy authentication service -->
        <service android:name="com.fnp.reactnativesyncadapter.DummyAuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service> <!-- Bound Service to interact with the SyncAdapter -->
        <service
            android:name="com.fnp.reactnativesyncadapter.SyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_adapter" />
        </service> <!-- React Native HeadlessJsTaskService -->
        <service
            android:name="com.fnp.reactnativesyncadapter.HeadlessService"
            android:enabled="true" />
    </application>

</manifest>